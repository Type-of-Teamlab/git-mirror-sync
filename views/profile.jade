html
  head
    title Git Mirror Sync
    link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")
    link(rel="stylesheet", type="text/css", href="/css/style.css")
    link(rel="stylesheet", type="text/css", href="/css/font-awesome.min.css")
  body
    .logo
      h1 Git Mirror Sync
      p Keep all your GitHub repos mirrored safely on BitBucket
      p Fork me on 
        a(href="https://github.com/obihann/git-mirror-sync") GitHub
    .wrapper
      .step
        h2.disabled Step 1:
        p.disabled Sign in with GitHub
        a.disabled()
          img.disabled(src="/img/octocat.png", alt="Login with GitHub", class="icon")
      .step
        h2 Step 2:
        p Connect your BitBucket account 
        a(href="/auth/bitbucket")
          img(src="/img/bitbucket_rgb_blue.png", alt="Login with BitBucket", class="icon")
      .step
        h2.disabled Step 3:
        p.disabled Add the webhook to your GitHub repos:
        pre.disabled https://git-mirror-sync.herokuapp.com/
